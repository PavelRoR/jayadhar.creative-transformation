#revs
	padding 50px 0
.carousel
	width 100%
	max-width 880px
	margin 0 auto
#text_revs
	margin 10px auto 40px
	// .carousel-inner
	.text_rev_item
		padding 20px 0
		a
			width 100%
			max-width 680px
			display block
			margin 0 auto
			position relative
			z-index 9
			padding 5px
			border 3px solid rgb(0,34,43)
			&:before
			&:after
				content ''
				display block
				position: absolute
				margin 0 auto
				left 0
				right 0
				width 194px
				height 24px
				background-repeat no-repeat
				z-index 9999
			&:before
				background-image url(../img/rev_decor_top.png)
				top - 18px
			&:after
				background-image url(../img/rev_decor_lower.png)
				bottom -18px
			.revs_img
				object-fit: contain
				object-position: center
				width 100%
				height 444px
				background-color #fff
.video_wrapper_revs
	width 100%
	max-width 680px
	margin 0 auto
.controls
	position: absolute
	left 0
	right 0
	margin 0 auto
	top calc(50% - 37px)
.carousel-control
	height 74px
	width 74px
	opacity 1
	text-shadow: none
	background-repeat no-repeat
	background-position: center
	border-radius: 50px
	background-color: transparent
.carousel-control.left
	background-image url(../img/arrow_left.png)
.carousel-control.right
	background-image url(../img/arrow_right.png)