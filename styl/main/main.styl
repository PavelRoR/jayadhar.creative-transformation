#main
	padding 20px 0
	background-color: rgb(11,23,27)
	background-image url(../img/main_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	text-align: center
	overflow hidden
	.container
		position relative
#adi_main
	position: absolute
	left 0
	bottom: -25px
	width 330px
.pre
	font-size: 24px;
	font-family: "Akrobat", sans-serif;
	color: rgb(255, 255, 255);
	line-height: 1
	text-align: center;
.main_title
	font-size: 38px;
	font-family: "AkrobatBold", sans-serif;
	color: rgb(246, 168, 86);
	text-transform: uppercase;
	line-height: 1.3;
	margin 20px 0 5px
	span
		display block
		font-family: 'CormorantBoldItalic', serif;
		font-weight: bold;
		font-style: italic;
		text-transform: none
.main_info
	overflow hidden
.main_text
	display: inline-block
	font-size: 24px;
	font-family: "Akrobat", sans-serif;
	color: rgb(255, 255, 255);
	line-height: 1.667;
	&:last-child
		&:before
			content '|'
			display: inline-block
			margin 0 17px
	span
		display: inline-block
.video_wrapper_main
	max-width 370px
	margin-top: 20px