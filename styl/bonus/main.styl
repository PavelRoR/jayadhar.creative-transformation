#main
	padding 20px 0
	background-color: rgb(11,23,27)
	background-image url(../img/main_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	text-align: center
.pre
	font-size: 24px;
	font-family: "Akrobat", sans-serif;
	color: rgb(255, 255, 255);
	line-height: 1
	text-align: center;
.main_title
	font-size: 42px;
	font-family: 'CormorantBoldItalic', serif;
	font-weight: bold
	font-style: italic
	color: rgb(246, 168, 86);
	line-height: 1.3;
	margin 10px 0 5px
.main_text
	font-size: 22px;
	font-family: "Akrobat", sans-serif;
	color: rgb(255, 255, 255);
	line-height: 1.667;
	span
		display inline-block
.main_video_wrapper
	max-width 560px
	margin-top: 20px
#main.remind
	min-height calc(100vh - 231px)
.remind_main_title
	font-family: "AkrobatBold", sans-serif;
	font-style: normal
	font-weight: normal
	margin: 60px 0
	a
		font-family: 'CormorantBoldItalic', serif;
		font-weight: bold
		font-style: italic
		display: inline-block
		text-decoration: none
		&:hover
			text-decoration: underline
			color #fff
.remind_main_subtitle
	font-size: 26px
	color #fff