footer
	padding 20px 0
	text-align: center
	background-color: rgb(11,23,27)
	color #fff
	h5
		font-size: 20px;
		color: #d5c7ac
		margin 0
		font-family: "AkrobatBold", sans-serif;
	p
	#conditions
		font-size: 14px;
		color: #d5c7ac
		line-height: 1.786;
	#conditions
		text-decoration: underline
		&:focus
			color #d5c7ac
			text-decoration: none
		&:hover
			color #d5c7ac
			text-decoration: none
.soc_buttons
	width 100%
	margin: 0 auto
	a
		display: inline-block
		margin: 10px 7px 15px
		position relative
		z-index: 1
		.fa
			border-radius: 50px
			background-color: #CFC3A3
			width: 32px;
			height: 32px;
			color rgb(11,23,27)
			line-height 32px
			font-size 18px
			position relative
			z-index 9
			transition all .3s ease
		&:hover
			.fa
				opacity .9
				transform: translateY(-3px)