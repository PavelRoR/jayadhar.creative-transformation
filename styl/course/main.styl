#main
	padding 60px 0
	background-color: rgb(11,23,27)
	background-image url(../img/main_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	text-align: center
.pre
	font-size: 18px;
	font-family: "Akrobat", sans-serif;
	color: rgb(255, 255, 255);
	line-height: 1
	text-align: center;
	margin-bottom: 30px
.main_title
	font-size: 42px;
	font-family: 'CormorantBoldItalic', serif;
	font-weight: bold
	font-style: italic
	color: rgb(246, 168, 86);
	line-height: 1.3;
	margin 0 0 25px
	small
		display block
		font-size: 20px
		font-family: "Akrobat", sans-serif;
		font-weight: normal
		font-style: normal
.main_text
	font-size: 22px;
	font-family: "Akrobat", sans-serif;
	color: rgb(255, 255, 255);
	line-height: 1.667;
	span
		display inline-block
		font-family: "AkrobatBold", sans-serif;
		font-weight: bold
	&:last-of-type
		margin 10px 0 40px